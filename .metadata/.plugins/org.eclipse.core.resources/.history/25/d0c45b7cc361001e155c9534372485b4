package com.example.springweb.samples;

public class Ex_ArrayList2 {

	public static int[] removeTheElement(int[] arr, int index) {

		int[] removedArrayOfNums = {};

		for (int i = 0,k=0; i < arr.length; i++) {

			if (i == index) {
				continue;
			} else {
				removedArrayOfNums[k++] = arr[i];
			}
		}
		return removedArrayOfNums;

	}

	public static void main(String[] args) {

		int[] arrayOfNums = { 25, 56, 21, 65, 92, 76 };

		System.out.println(Ex_ArrayList2.removeTheElement(arrayOfNums, 3));

	}
}
